@page
@model MyRepliesModel

<h1>My Replies</h1>

@if (Model.TicketDetails != null)
{
    <div>
        <h2>Ticket Details</h2>
        <p><strong>Subject:</strong> @Model.TicketDetails.Subject</p>
        <p><strong>Query Body:</strong> @Model.TicketDetails.QueryBody</p>
        <p><strong>Date Created:</strong> @Model.TicketDetails.DateCreated</p>
    </div>
}

<h2>Enter Your Reply</h2>
<form method="post">
    <div class="form-group">
        <label for="replyText">Reply:</label>
        <textarea id="replyText" name="ReplyText" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Reply</button>
</form>

